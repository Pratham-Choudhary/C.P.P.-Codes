#include <bits/stdc++.h>
using namespace std;

int main()
{
	int a,b;
	cout<<"Choose the shape:-\n\n1. Rectangle\n2. Square\n3. Circle";
	cin>>a;
	if(a==1)
	{ 
		cout<<"\n\nYou Have choose Rectangle";
		cout<<"\n1. Area\n2. Perimeter";
        cin>>b;
        if(b==1)
        {
        	cout<<"\n\nYou have choose Area";
        	int l,b,area;
        	cout<<"\n\nEnter the legth and Breadth:- ";
        	cin>>l>>b;
        	area=l*b;
        	cout<<"\nArea of Rectangle is "<< area <<" cm ";
        }
        if(b==2)
        {
        	cout<<"\n\nYou have Choose Perimeter";
        	int l,b,per;
        	cout<<"\nEnter the length and breadth: ";
        	cin>>l>>b;
        	per=2*(l+b);
        	cout<<"\nPerimeter is "<< per << " cm ";
        }
	}    
        if(a==2)
        {
        	cout<<"\n\nYou have choose Square";
        	cout<<"\n1. Area\n2. Perimeter";
        cin>>b;
        if(b==1)
        {
        	cout<<"\nYou have choose Area";
        	int a,area;
        	cout<<"\n\nEnter the Side:- ";
        	cin>>a;
        	area=a*a;
        	cout<<"\nArea of Square is "<< area <<" cm ";
        }
        if(b==2)
        {
        	cout<<"\n\nYou have Choose Perimeter";
        	int a,per;
        	cout<<"\n\nEnter the side: ";
        	cin>>a;
        	per=4*a;
        	cout<<"\nPerimeter is "<< per << " cm ";
        }
    }
    if(a==3)
        {
        	cout<<"\n\nYou have choose Circle";
        	cout<<"\n1. Area\n2. Perimeter";
        cin>>b;
        if(b==1)
        {
        	cout<<"\nYou have choose Area";
        	float r,area,pie=3.14;
        	cout<<"\n\nEnter the radius:- ";
        	cin>>r;
        	area=pie*r*r;
        	cout<<"\nArea of Circle is "<< area <<" cm ";
        }
        if(b==2)
        {
        	cout<<"\n\nYou have Choose Perimeter";
        	float r,per,pie=3.14;
        	cout<<"\n\nEnter the side: ";
        	cin>>r;
        	per=2*pie*r*r;
        	cout<<"\nPerimeter is "<< per << " cm ";
        }
    }
	return 0;
}
